import griotte.server
import tornado.ioloop
import tornado.web
import logging
import os

from setproctitle import setproctitle

from tornado.options import options
from griotte.config import Config

def main():
    Config("server")
    setproctitle("griotte-server")
    app = tornado.web.Application([
        (r'/ws',   griotte.server.Server),
        (r'/api/(\w+)', griotte.server.Api),
        (r'/upload', griotte.server.Uploader),
        (r'/store/(.*)', tornado.web.StaticFileHandler, { 'path': options.store, }),
        (r'/(.*)', tornado.web.StaticFileHandler, { 'path': options.document_root,
                                                    'default_filename': 'index.html' }),
        ])

    logging.info("Starting tornado web server")

    logging.info("Listening on port %s" % options.server_port)
    logging.info("Static assets path ... %s" % options.document_root)
    logging.info("Store path ........... %s" % options.store)

    app.listen(options.server_port)
    tornado.ioloop.IOLoop.instance().start()

if __name__ == "__main__":
    main()
