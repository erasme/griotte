import sys

subsystem = sys.argv[1]
try:
    cls = "%sHandler" % subsystem.capitalize()
    subsys_module = __import__("griotte.%s.%shandler" % (subsystem, subsystem), fromlist=[cls])
    getattr(subsys_module,cls)()

except ImportError:
    # Display error message
    import logging
    logging.error("Unable to import %s class from %s module" % (cls, subsystem))

