#!/usr/bin/env python3

import raspeomix.server
import raspeomix.constants as C
import tornado.ioloop
import tornado.web
from tornado.options import define, options
import logging
import os


define("port", default=C.DEFAULT_PORT, help="Web server port")
define("static", default=C.DEFAULT_STATIC, help="Static assets path")

def main():
    app = tornado.web.Application([
        (r'/ws', raspeomix.server.Server),
        (r'/(.*)', tornado.web.StaticFileHandler, { 'path': options.static,
                                                    'default_filename': 'index.html' }),
        ])

    tornado.options.parse_command_line()
    logging.info("Starting tornado web server")

    logging.info("Listening on port %s" % options.port)
    app.listen(options.port)
    logging.info("Static assets path : %s" % options.static)
    tornado.ioloop.IOLoop.instance().start()

if __name__ == "__main__":
    main()
